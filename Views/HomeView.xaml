<UserControl x:Class="WpfApp1.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Grid.Column="1" Background="White" Margin="40 60 10 0">
        <TextBlock Text="主页" Style="{StaticResource titleText}"/>

        <Border CornerRadius="20" Margin="0 20 0 0">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#30ad9a" Offset="0"/>
                    <GradientStop Color="#18c274" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4" Color="#1fae7e"/>
            </Border.Effect>

            <Grid>
                <Border Opacity="0.07" CornerRadius="20">
                    <Border.Background>
                        <SolidColorBrush Color="White"/>
                    </Border.Background>
                </Border>

                <!--Music List-->
                <StackPanel Margin="30">
                    <TextBlock Text="Daily Singer" Foreground="White" FontSize="26" FontWeight="Bold"/>
                    <TextBlock Text="Taylor Swift" Foreground="#c0e6de" FontSize="18" FontWeight="SemiBold"/>
                </StackPanel>

            </Grid>
        </Border>

    </StackPanel>
</UserControl>
