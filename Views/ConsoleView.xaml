<UserControl x:Class="VitaServerLauncher.Views.ConsoleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>

        <TextBlock Text="第二页" Style="{StaticResource titleText}"/>

        <Border CornerRadius="20" Margin="0 20 0 0">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#30ad9a" Offset="0"/>
                    <GradientStop Color="#18c274" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4" Color="#1fae7e"/>
            </Border.Effect>

            <Grid>
                <StackPanel Margin="30">
                    <TextBlock Text="标题" Foreground="White" FontSize="26" FontWeight="Bold"/>
                    <TextBlock Text="这里是示例文字" Foreground="#c0e6de" FontSize="18" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>

    </StackPanel>
</UserControl>
